<h1><%= displayName %>'s Cart </h1>

<% allItems.forEach(item => { %>
    <h2 id="brand-type"><%= item.brand %> <%= item.type %></h2>
    <img src="<%= item.imgUrl %>" alt="<%= item.type %>">
    <h3 id="size">size: <%= item.size %></h3>
    <h3 id="price">$<%= item.price %></h3>
    <!-- navigate to individual item view-->
    <form action="/items/<%= item.id %>" method="GET">
        <input type="number" value="<%= item.id %>" style="display: none;" name="itemId">
        <input type="submit" value="View"> 
    </form>
    <!-- remove item from cart-->
    <form action="/user/cart/<%= displayName %>/?_method=PUT" method="POST">
        <input type="number" value="<%= item.id %>" style="display: none;" name="itemId">
        <input type="submit" value="Remove From Cart"> 
    </form>
<% }) %> 