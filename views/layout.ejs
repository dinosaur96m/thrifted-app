<body>
    <header>
        <h1>Express Authentication Boilerplate</h1>
        <nav>
            <ul>
              <% if (!currentUser) { %>
                <li><a href="/auth/signup">Signup</a></li>
                <li><a href="/auth/login">Login</a></li>
              <% } else { %>
                <li><a href="/auth/logout">Logout</a></li>
                <li><a href="/user/:userName">Your Store</a></li>
                <li><a href="/user/cart/:userName">Cart</a></li>
                <li><a href="/items">Browse</a></li>
                <li><a href="/items/new">Sell</a></li>
              <% } %>
            </ul>
          </nav>
    </header>
    <%- include('partials/alerts') %>
    <%- body %> 
    <!-- local upload instantiation -->
<script src="/../uploadClientForm.js" type="text/javascript"></script>
